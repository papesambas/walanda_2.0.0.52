{% extends 'base.html.twig' %}

{% block title %}Meres
{% endblock %}

{% block body %}
    <h1 class="fst-italic text-center bg-warning-subtle bg-opacity-75">Informations sur
        {{ mere }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Nom et Prénom</th>
                <td>{{ mere.fullname }}</td>
            </tr>
            <tr>
                <th>Profession</th>
                <td>{{ mere.profession.designation }}</td>
            </tr>
            <tr>
                <th>Père(s)</th>
                <td>
                    <div class="row">
                        {% for parent in mere.parents %}
                            <div class="col-md-6">
                                <div class="card mb-3">
                                    <div class="card-header">{{ parent.pere.fullname }}</div>
                                    <div class="card-body">
                                        <table class="table table-hover table-sm">
                                            <thead>
                                                <tr>
                                                    <th>Nom de l'élève</th>
                                                    <th>Classe</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                {% for eleve in parent.eleves %}
                                                    <tr>
                                                        <td>{{ eleve.fullname }}</td>
                                                        <td>{{ eleve.classe }}</td>
                                                    </tr>
                                                {% endfor %}
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-primary btn-sm" href="{{ path('app_parents_index') }}">back to list</a>

    <a href="{{ path('app_meres_edit', {'slug': mere.slug}) }}">edit</a>

    {{ include('meres/_delete_form.html.twig') }}
{% endblock %}
